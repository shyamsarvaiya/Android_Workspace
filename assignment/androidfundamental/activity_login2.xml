<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login2">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/backpage"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-56dp"
        tools:layout_editor_absoluteY="41dp"></ImageView>

    <EditText

        android:hint="Email"
        android:padding="@dimen/_12ssp"
        android:background="@drawable/edittext_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_200sdp"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        tools:ignore="MissingConstraints">
    </EditText>
    <EditText

        android:hint="Password"
        android:padding="@dimen/_12ssp"
        android:background="@drawable/edittext_style"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_100sdp"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        tools:ignore="MissingConstraints">

    </EditText>

    <Button
        android:text="Sign In"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:backgroundTint="@drawable/button2_background_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_40sdp"
        tools:ignore="MissingConstraints">
    </Button>



    <TextView
        android:text="Forgot Password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_225sdp"
        android:textSize="@dimen/_12ssp"
        tools:ignore="MissingConstraints">

    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/_120sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_150sdp"
        android:backgroundTint="@drawable/button3_background_color"
        android:text="Sign in"
        android:textColor="#110427"
        android:drawableLeft="@drawable/faceb"
        android:textSize="@dimen/_10ssp"
        tools:ignore="MissingConstraints"
        >

    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_120sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_150sdp"
        android:backgroundTint="@drawable/button3_background_color"
        android:text="Sign in"
        android:textColor="#110427"
        android:drawableLeft="@drawable/gmail"
        android:textSize="@dimen/_10ssp"
        tools:ignore="MissingConstraints"
        >

    </Button>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/_60sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_120sdp"
        android:textSize="@dimen/_12ssp"
        android:text="Don't have an account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/_140sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_120sdp"
        android:textSize="@dimen/_12ssp"
        android:textColor="#110427"
        android:text="Sign Up"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </TextView>





</androidx.constraintlayout.widget.ConstraintLayout>